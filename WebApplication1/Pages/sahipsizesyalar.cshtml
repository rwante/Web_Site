@page
@model WebApplication1.Pages.sahipsizesyalarModel
@{
}


<html>

<head>
    <title>Sahipsiz Eşyalar</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!--Gerekli css, bootstrap, js kaynakları ekleniyor... -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l" crossorigin="anonymous">
    <link href="~/css/kayipesyalar.css" rel="stylesheet" />
    <link href="src/font-awesome/css/all.css" rel="stylesheet">
    <script src="https://code.iconify.design/1/1.0.7/iconify.min.js"></script>
    <script type="text/javascript" src="/js/navbar.js"></script>
</head>

<body>
    <!--Sitenin baş kısmı ve navbar -->
    <header>
        <nav class="topnav" id="myTopnav">
            <div class="logo">
                <a href="index"><img src="~/images/logo.png" /></a>
                <a href="index" class="active"><i class="fa fa-home fa-2x">Anasayfa</i></a>
                <a href="yeniilan"><i class="fa fa-search fa-2x">Yeni İlan Ver</i></a>
                <a href="kayipesyalar"><i class="fa fa-clipboard fa-2x">Kayıp Eşya İlanları</i></a>
                <a href="sahipsizesyalar"><i class="fa fa-paw fa-2x">Sahipsiz Eşyalar</i></a>
                <a href="hakkimizda"><i class="fa fa-address-card fa-2x">Hakkımızda</i></a>
                <a href="javascript:void(0);" class="icon" onclick="myFunction()">
                    <i class="fa fa-bars"></i>
                </a>
            </div>
        </nav>
    </header>
    <!-- Eşyaların kart şeklinde listelendiği kısım -->
    <section>
        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">


                @foreach (var item in Model.Esya)
                {
        <div class="col">
            <div class="card shadow-sm" style="height:100%;">
                <text x="50%" y="50%" fill="#eceeef" dy=".3em" class="Baslik"><strong>@Html.DisplayFor(modelItem => item.ilanBasligi)</strong></text>
                <img class="ilan-resim" src="~/images/@item.resim" />

                <div class="card-body">
                    <p class="card-text">@Html.DisplayFor(modelItem => item.detay)</p>
                    <p class="card-text">İl: @Html.DisplayFor(modelItem => item.sehir)</p>
                    <p class="card-text">İlçe: @Html.DisplayFor(modelItem => item.ilce)</p>
                    <p class="card-text">Kaybeden: @Html.DisplayFor(modelItem => item.ad) @Html.DisplayFor(modelItem => item.soyad)</p>
                    <p class="card-text">Adres: @Html.DisplayFor(modelItem => item.adres)</p>
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="align-self-end btn btn-sm btn-outline-secondary">Buldum</button>
                        </div>
                        <small class="text-muted">10.04.2021</small>
                    </div>
                </div>
            </div>
        </div>}


            </div>
        </div>
    </section>
    <!--Footer Kısmı -->
    <div class="footer-dark">
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-md-6 item text">
                        <h3>KAYIP BULUR</h3>
                        <p>4 Bilgisayar mühendisliği öğrencisi tarafından bir dönem projesi olarak başlayan Kayıp Bulur isimli site zaman içinde gelişerek bir dünya markası haline gelmeyi ve insanlara faydalı olmayı amaçlamaktadır.</p>
                    </div>
                    <!-- Sosyal Medya Butonları -->
                    <div class="mb-4">
                        <!-- Facebook -->
                        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <!-- Twitter -->
                        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <!-- Google -->
                        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-google"></i>
                        </a>
                        <!-- Instagram -->
                        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-instagram"></i>
                        </a>
                        <!-- Linkedin -->
                        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <!-- Github -->
                        <a class="btn btn-outline-light btn-floating m-1" href="#!" role="button">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
                <p class="copyright">Kayıp Bulur © 2021</p>
            </div>
        </footer>
    </div>
</body>
</html>